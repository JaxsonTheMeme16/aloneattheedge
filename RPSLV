#            author:    Jaxson Santiago <jsantiago2709265@woonsocketschools.com>
#       description: Rock, Paper, Scissors, Lizard, Spock for one person
import random

isPlaying = True
while isPlaying:
    choices = ["rock", "paper", "scissors", "spock", "lizard"]
    playerChoice = input("Choose rock, paper, scissors, lizard, or spock : ").lower()
    aiChoice = random.choice(choices)
    
    if playerChoice in choices:

        if playerChoice == aiChoice:
            print("It's a tie!")

        elif (
                (playerChoice == "rock" and aiChoice == "scissors")
                or (playerChoice == "paper" and aiChoice == "rock")
                or (playerChoice == "scissors" and aiChoice == "paper")
                or (playerChoice == "rock" and aiChoice == "lizard")
                or (playerChoice == "lizard" and aiChoice == "spock")
                or (playerChoice == "spock" and aiChoice == "scissors")
                or (playerChoice == "scissors" and aiChoice == "lizard")
                or (playerChoice == "lizard" and aiChoice == "paper")
                or (playerChoice == "paper" and aiChoice == "spock")
                or (playerChoice == "spock" and aiChoice == "rock")
        ):
            print(f"The player has chosen {playerChoice} and the bot has chosen {aiChoice} you win!")
            
        elif (
                (aiChoice == "rock" and playerChoice == "scissors")
                or (aiChoice == "paper" and playerChoice == "rock")
                or (aiChoice == "scissors" and playerChoice == "paper")
                or (aiChoice == "rock" and playerChoice == "lizard")
                or (aiChoice == "lizard" and playerChoice == "spock")
                or (aiChoice == "spock" and playerChoice == "scissors")
                or (aiChoice == "scissors" and playerChoice == "lizard")
                or (aiChoice == "lizard" and playerChoice == "paper")
                or (aiChoice == "paper" and playerChoice == "spock")
                or (aiChoice == "spock" and playerChoice == "rock")
        ):
            print(f"The player has chosen {playerChoice} and the bot has chosen {aiChoice} the computer wins!")

    ask = input("Would you like to play again? : ")
    if ask != "yes":
        print("I was having fun...")
        isPlaying = False
