#   description: Rock, Paper, Scissors, Lizard, Spock for one person
#
import random
isPlaying = True

while isPlaying is True:
    choices = ["rock", "paper", "scissors", "spock", "lizard"]
    choice = input("Choose rock, paper, scissors, lizard, or spock : ").lower()

    aiChoice = random.choice(choices) 

    if choice in choices:
        if choice == aiChoice:
            print("It's a tie!")

        elif (

            (choice == "rock" and aiChoice == "scissors")
            or (choice == "paper" and aiChoice == "rock")
            or (choice == "scissors" and aiChoice == "paper")
            or (choice == "rock" and aiChoice == "lizard")
            or (choice == "lizard" and aiChoice == "spock")
            or (choice == "spock" and aiChoice == "scissors")
            or (choice == "scissors" and aiChoice == "lizard")
            or (choice == "lizard" and aiChoice == "paper")
            or (choice == "paper" and aiChoice == "spock")
            or (choice == "spock" and aiChoice == "rock")

    ):

            print(f"The player has chosen {choice} and the bot has chosen", aiChoice, "you win!")
    else:

            print("The player has chosen", choice, "and the bot has chosen", aiChoice, "the computer wins!")

    ask = input("Would you like to play again? : ")
    if ask != "yes":
        print("I was having fun...")
        isPlaying = False
